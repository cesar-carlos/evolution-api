{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "target": "es2020",
    "module": "ESNext",
    "rootDir": "./",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "noEmitOnError": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "incremental": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@cache/*": ["./src/cache/*"],
      "@config/*": ["./src/config/*"],
      "@exceptions": ["./src/exceptions"],
      "@libs/*": ["./src/libs/*"],
      "@utils/*": ["./src/utils/*"],
      "@validate/*": ["./src/validate/*"]
    },
    "moduleResolution": "bundler"
  },
  "exclude": ["node_modules", "./test", "./dist", "./prisma"],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}